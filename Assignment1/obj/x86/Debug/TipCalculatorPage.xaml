<Page
    x:Class="Assignment1.TipCalculatorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Assignment1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,10" FontSize="24" Text="Tip Calculator" />

        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="16" Text="Enter Bill Amount:" />
        <TextBox x:ConnectionId='2' x:Name="billAmountTextBox" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,10" Width="200" PlaceholderText="Enter bill amount" />

        <TextBlock Grid.Row="3" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="16" Text="Enter Tip Percentage (e.g., 10%):" />
        <TextBox x:ConnectionId='3' x:Name="tipPercentTextBox" Grid.Row="4" HorizontalAlignment="Center" Margin="0,10,0,10" Width="200" PlaceholderText="Enter tip percentage (e.g., 10%)" />

        <Button x:ConnectionId='4' x:Name="btnCalculateTip" Grid.Row="2" Content="Calculate Tip" Margin="455,0,0,0" Width="120"                                 />
        <TextBlock x:ConnectionId='5' x:Name="tipResultTextBlock" Grid.Row="6" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="18" Text="" />

        <Button x:ConnectionId='6' x:Name="btnHome" Content="Home" Margin="455,0,0,0" Grid.Row="4" Width="120"                         />
        <TextBlock x:ConnectionId='7' x:Name="totalBillTextBlock" HorizontalAlignment="Left" Margin="951,20,0,0" Grid.Row="6" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
    </Grid>
</Page>

